<h1>Hello <%= @attendee.name %>!</h1>
<% if @attendee.artists.any? %>
<h3>Your Artists:</h3>
  <table style = "width:50%">
    <tr>
      <th>Artist</th>
      <th>Stage</th>
      <th>Remove</th>
    </tr>
    <% @attendee.artists.each do |artist| %>
      <tr>
        <th><a href="/artist/<%= artist.id%>"><%= artist.name %></a></th>
  <th>  <!-- stage will go here --> </th>
      <th><a href="/attendee/<%= @attendee.id %>/remove_artist/<%= artist.id %>"><span class="glyphicon glyphicon-remove-circle warning" aria-hidden="true"></span></a></th>
    <% end %>
  </tr>
  </table>
    <h4>Click on artist to view bio or leave a review</h4>
<% end %>

<% if @artists.any? %>
<h4>Please choose your artists from the list below</h4>
 <form action="/attendee/<%= @attendee.id %>/add_artist" method="post">
   <% @artists.each do |artist| %>
   <label>
   <input type="checkbox" name="artists_id[]" value="<%= artist.id %>">
     <%= artist.name %>
 </label>
   <% end %>
   <button type="submit">Add artist</button>
 </form>
 <%else %>
 <h4>You have added ALL the artists to your list! Busy fest yo!</h4>
 <% end %>
